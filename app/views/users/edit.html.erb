<h1>User Edit Page</h1>

<% if @user.errors.any? %>
<h2>The following errors prevented the user from being updated</h2>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
  Username  : <%= f.text_field :username, placeholder: 'Your user name here' %><br />
  Email     : <%= f.text_field :email, placeholder: 'Your email here' %><br />
  Password  : <%= f.password_field :password, placeholder: 'Input your password here' %><br />
  <%= f.submit %>
<% end %>
